<?xml version="1.0" encoding="utf-8"?>
    <!--https://guides.codepath.com/android/Handling-Scrolls-with-CoordinatorLayout-->
    <!--https://guides.codepath.com/android/Shared-Element-Activity-Transition-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/activity_detail_design_spec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.algar.ifuckforwind.activity.DetailActivity">

        <FrameLayout
            android:id="@+id/activity_detail_spot_wind_pref_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/activity_detail_wind_chart_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/activity_detail_map_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </FrameLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>