<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_cardview_spot_avatar_imageview"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/getskar"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingTop="1dp"
            android:background="@color/cardImageDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/detail_cardview_spot_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GetskÃ¤r"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detail_cardview_spot_distance_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41 km"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_cardview_wind_day_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Midday: 8-10 m/s"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingBottom="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/detail_cardview_wind_afternoon_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afternoon: 9-14 m/s"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textSize="18sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
